{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "outDir": "dist",
        "baseUrl": "./",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
